{
  "name": "services",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/services/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/services",
        "main": "packages/services/src/index.ts",
        "tsConfig": "packages/services/tsconfig.lib.json",
        "assets": ["packages/services/*.md"]
      },
      "dependsOn": ["^build"]
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/services/**/*.{ts,tsx,js,jsx}"],
        "eslintConfig": ".eslintrc.json",
        "ignorePath": ".eslintignore"
      }
    },
    "lint:fix": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/services/**/*.{ts,tsx,js,jsx}"],
        "eslintConfig": ".eslintrc.json",
        "ignorePath": ".eslintignore",
        "fix": true
      }
    },
    "format": {
      "executor": "nx:run-commands",
      "options": {
        "command": "prettier --write 'packages/services/**/*.{ts,tsx,js,jsx,json,md}'"
      }
    },
    "format:check": {
      "executor": "nx:run-commands",
      "options": {
        "command": "prettier --check 'packages/services/**/*.{ts,tsx,js,jsx,json,md}'"
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "packages/services/jest.config.ts"
      }
    },
    "test:coverage": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "packages/services/jest.config.ts",
        "coverage": true
      }
    }
  },
  "tags": ["scope:services", "type:library"]
}
