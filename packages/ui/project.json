{
  "name": "ui",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/ui/src",
  "projectType": "library",
  "tags": ["scope:shared", "type:ui"],
  "targets": {
    "build": {
      "executor": "@nx/vite:build",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/ui",
        "configFile": "packages/ui/vite.config.ts"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/ui/**/*.{ts,tsx,js,jsx}"],
        "eslintConfig": ".eslintrc.json",
        "ignorePath": ".eslintignore"
      }
    },
    "lint:fix": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/ui/**/*.{ts,tsx,js,jsx}"],
        "eslintConfig": ".eslintrc.json",
        "ignorePath": ".eslintignore",
        "fix": true
      }
    },
    "format": {
      "executor": "nx:run-commands",
      "options": {
        "command": "prettier --write 'packages/ui/**/*.{ts,tsx,js,jsx,json,md}'"
      }
    },
    "format:check": {
      "executor": "nx:run-commands",
      "options": {
        "command": "prettier --check 'packages/ui/**/*.{ts,tsx,js,jsx,json,md}'"
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "packages/ui/jest.config.ts"
      }
    },
    "test:coverage": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "packages/ui/jest.config.ts",
        "coverage": true
      }
    }
  }
}
